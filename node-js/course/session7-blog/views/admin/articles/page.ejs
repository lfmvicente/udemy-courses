<%- include('../../partials/header.ejs') %>
<%- include('../../partials/home-navbar') %>
<body>
    <div class="container">
      <% result.articles.rows.forEach(article => { %>
        <div class="card">
          <div class="card-header">
            <h2><%= article.title %></h2>
          </div>
          <div class="card-body">
            <a href="<%=article.slug%>" class="btn btn-success">Read</a>
          </div>
        </div>
        <br>
         <% }) %>
        <div class="row">
            <div class="col col-12">
                <%if (result.page > 2) {%>
                <a href="/articles/page/<%= result.page - 1%>">< Previous Page</a>
                <%} else if (result.page == 2) {%>
                    <a href="/">< Previous Page</a>
                <% } %>    
                <% if (result.nextPage) {%>
                    <a style="float:right" href="/articles/page/<%= result.page + 1%>">Next Page ></a>
                <%}%>
            <hr>
            </div>    
        </div>
    </div>  
</body>
<%- include('../../partials/footer.ejs') %>
